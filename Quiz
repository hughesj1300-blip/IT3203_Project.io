  <script>
    function submitQuiz() {
      let score = 0;

      // Q1: Text input
      if (document.getElementById('q1').value.trim() === "2") score++;

      // Q2: Radio
      if (document.querySelector('input[name="q2"]:checked')?.value === "IT3203") score++;

      // Q3: Radio
      if (document.querySelector('input[name="q3"]:checked')?.value === "Web Browsers") score++;

      // Q4: Radio
      if (document.querySelector('input[name="q4"]:checked')?.value === "Chrome") score++;

      // Q5: Multi-check
      const correctAnswers = ["Chrome", "Firefox", "Safari", "Edge"];
      const selected = [...document.querySelectorAll('input[name="q5"]:checked')].map(cb => cb.value);
      const isCorrect = correctAnswers.every(ans => selected.includes(ans)) && !selected.includes("YouTube");
      if (isCorrect) score++;

      const percentage = (score / 5) * 100;
      const resultText = percentage >= 70 ? "✅ Pass!" : "❌ Fail";
      document.getElementById('result').textContent = `Score: ${percentage}% — ${resultText}`;
      document.getElementById('resetBtn').style.display = 'inline-block';
    }
  </script>
